<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tvDtHrRecebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="12/06/2016 às 15:30"
            android:layout_weight="1"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/tvExpiraEm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Válido até 15/06/2016 às 15:30"
            android:textSize="14sp"
            android:textAlignment="textEnd"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="De: Lucas Micheloni Antevere"
            android:paddingBottom="1sp"/>

        <TextView
            android:id="@+id/tvCursoPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Para: 1º ADS - TARDE"
            android:gravity="right"/>



        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="1sp"
            android:text="Dia da prova será outro dia ou não?"/>

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="1sp"
            android:text="Decidam logo hein... estou esperando."/>

        <LinearLayout
            android:id="@+id/item_opcao_detalhes"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_group_black_24dp"
                    android:backgroundTint="#555555"></View>

                <TextView
                    android:id="@+id/item_opcao_enviados"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_visibility_black_24dp"
                    android:backgroundTint="#555555"></View>

                <TextView
                    android:id="@+id/item_opcao_visualizados"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_opcao_content_respondidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_done_all_black_24dp"
                    android:backgroundTint="#555555"></View>

                <TextView
                    android:id="@+id/item_opcao_respondidos"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="10"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_opcoes"></LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>